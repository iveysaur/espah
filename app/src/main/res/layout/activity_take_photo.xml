<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.ivanity.espah.TakePhotoActivity">

    <TextView android:text="Example text" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/question_text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="160dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btnCancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post it!"
        android:id="@+id/btnPost"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_alignBottom="@id/question_text"
        android:layout_marginBottom="25dp"
        android:layout_height="wrap_content">
        <SurfaceView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/surfaceView"
            android:layout_alignParentTop="true"
            />
    </FrameLayout>

</RelativeLayout>
